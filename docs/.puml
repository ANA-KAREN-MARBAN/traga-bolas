@startuml

class Bola {
    - shape: CircleShape
    - velocity: Vector2f
    - hasBounced: bool
    + Bola(radius: float, position: Vector2f, color: Color, velocity: Vector2f)
    + update(bounds: FloatRect): void
    + draw(window: RenderWindow): void
    + getBounds(): FloatRect
    + getColor(): Color
    + setPosition(position: Vector2f): void
    + getPosition(): Vector2f
}

class Cocodrilo {
    - sprite: Sprite
    - initialPosition: Vector2f
    - moveDistance: float
    - moveDirection: float
    - moving: bool
    - animationTime: float
    - score: int
    - moveClock: Clock
    - frameIndex: int
    - textureRect: IntRect
    - texture: Texture
    + Cocodrilo(texture: Texture, position: Vector2f, moveDirection: float)
    + moveForward(): void
    + update(deltaTime: float): void
    + draw(window: RenderWindow): void
    + getBounds(): FloatRect
    + increaseScore(): void
    + decreaseScore(): void
    + getScore(): int
    + resetAnimation(): void
}

class main {
    - window: RenderWindow
    - background: Sprite
    - backgroundBounds: FloatRect
    - cocodriloLeft: Cocodrilo
    - cocodriloRight: Cocodrilo
    - bolas: vector<Bola>
    - bolaVelocity: Vector2f
    - font: Font
    - scoreText: Text
    - gameOver: bool
    - winner: string
    - clock: Clock
    - spawnTimer: float
    - ganoBuffer: SoundBuffer
    - menosBuffer: SoundBuffer
    - masBuffer: SoundBuffer
    - ganoSound: Sound
    - menosSound: Sound
    - masSound: Sound
    + main()
}

Bola "1" --> "*" main
Cocodrilo "1..2" --> "*" main

@enduml
