class Cocodrilo {
  - sf::Sprite sprite
  - sf::Vector2f initialPosition
  - float moveDistance
  - float moveDirection
  - bool moving
  - float animationTime
  - int score
  - sf::Clock moveClock
  - int frameIndex
  - sf::IntRect textureRect
  - sf::Texture texture
  + Cocodrilo(const sf::Texture& texture, const sf::Vector2f& position, float moveDirection)
  + void moveForward()
  + void update(float deltaTime)
  + void draw(sf::RenderWindow& window) const
  + sf::FloatRect getBounds() const
  + void increaseScore()
  + void decreaseScore()
  + int getScore() const
  + void resetAnimation()
}

class main {
  + int main()
}

